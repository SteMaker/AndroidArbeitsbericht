<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".editor_fragments.WorkTimeEditorFragment">
    <data>
        <variable name="work_time_container_data" type="com.stemaker.arbeitsbericht.data.WorkTimeContainerData"/>
    </data>
    <com.stemaker.arbeitsbericht.helpers.LinearLayoutVisListener
        android:id="@+id/work_time_content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background"
        android:orientation="vertical"
        app:visibility="@={work_time_container_data.visibility}">
        <Button
            android:id="@+id/work_time_add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:text="@string/add"
            style="@style/ArbeitsberichtAppTheme.IconTextButtons"
            app:icon="@drawable/ic_add_circle_black_24dp"
        />
    </com.stemaker.arbeitsbericht.helpers.LinearLayoutVisListener> <!-- End of worktimes_content_container-->
</layout>