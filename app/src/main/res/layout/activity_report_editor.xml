<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReportEditorActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/toplevel_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/project_head_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/client"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:textSize="26sp"
                />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"
                    android:id="@+id/expand_project_button"
                    android:onClick="onClickExpandProjectButton"
                    android:contentDescription="@string/unfold"
                />
            </LinearLayout> <!-- End of project_head_container -->
            <LinearLayout
                android:id="@+id/project_content_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="395dp"
                    android:layout_height="wrap_content"
                    android:visibility="visible">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/client_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName|textCapWords"
                        android:hint="@string/client"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="395dp"
                    android:layout_height="wrap_content"
                    android:visibility="visible">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/client_extra1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapSentences"
                        android:hint="@string/extra"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout> <!-- End of project_content_container-->
            <LinearLayout
                android:id="@+id/billdata_head_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bill_address"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:textSize="26sp"
                />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"
                    android:id="@+id/expand_billdata_button"
                    android:onClick="onClickExpandBillDataButton"
                    android:contentDescription="@string/unfold"
                />
            </LinearLayout> <!-- End of billdata_head_container -->
            <LinearLayout
                android:id="@+id/billdata_content_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="395dp"
                    android:layout_height="wrap_content"
                    android:visibility="visible">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/bill_address_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName|textCapWords"
                        android:hint="@string/name"/>
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="395dp"
                    android:layout_height="wrap_content"
                    android:visibility="visible">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/bill_address_street"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        android:hint="@string/street"/>
                </com.google.android.material.textfield.TextInputLayout>
                <LinearLayout
                    android:id="@+id/plz_ort_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:visibility="visible">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/bill_address_zip"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:hint="@string/zip"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="275dp"
                        android:layout_height="wrap_content"
                        android:visibility="visible">
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/bill_address_city"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapWords"
                            android:hint="@string/city"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout> <!-- End of plz_ort_container-->
            </LinearLayout> <!-- End of billdata_content_container-->
            <LinearLayout
                    android:id="@+id/worktimes_head_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/worktimes"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                        android:textSize="26sp"
                />
                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp"
                        android:id="@+id/expand_worktimes_button"
                        android:onClick="onClickExpandWorktimesButton"
                        android:contentDescription="@string/unfold"
                />
            </LinearLayout> <!-- End of worktimes_head_container -->
            <LinearLayout
                    android:id="@+id/worktimes_content_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cardview_light_background"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <ImageButton
                        android:id="@+id/work_time_add_button"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:paddingRight="20dp"
                        android:src="@drawable/ic_add_circle_black_24dp"
                        android:onClick="onClickAddWorkTime"
                    />
            </LinearLayout> <!-- End of worktimes_content_container-->
            <LinearLayout
                    android:id="@+id/workitems_head_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/workitems"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                        android:textSize="26sp"
                />
                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp"
                        android:id="@+id/expand_workitems_button"
                        android:onClick="onClickExpandWorkitemsButton"
                        android:contentDescription="@string/unfold"
                />
            </LinearLayout> <!-- End of workitems_head_container -->
            <LinearLayout
                    android:id="@+id/workitems_content_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                <ImageButton
                    android:id="@+id/work_item_add_button"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:paddingRight="20dp"
                    android:src="@drawable/ic_add_circle_black_24dp"
                    android:onClick="onClickAddWorkItem"
                />
            </LinearLayout> <!-- End of workitems_content_container-->

            <LinearLayout
                    android:id="@+id/lump_sum_head_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lump_sum"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                    android:textSize="26sp"
                />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_drop_down_black_24dp"
                    android:id="@+id/expand_lump_sum_button"
                    android:onClick="onClickExpandLumpSumButton"
                    android:contentDescription="@string/unfold"
                />
            </LinearLayout> <!-- End of lump_sum_head_container -->
            <LinearLayout
                    android:id="@+id/lump_sum_content_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lump_sum_undef_hint"
                    android:text="@string/no_lump_sum_defined"
                    android:visibility="gone"
                />
                <ImageButton
                    android:id="@+id/lump_sum_add_button"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:paddingRight="20dp"
                    android:src="@drawable/ic_add_circle_black_24dp"
                    android:onClick="onClickAddLumpSum"
                    android:visibility="visible"
                />
            </LinearLayout> <!-- End of lump_sum_content_container-->

            <LinearLayout
                    android:id="@+id/material_head_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/material"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
                        android:textSize="26sp"
                />
                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_drop_down_black_24dp"
                        android:id="@+id/expand_material_button"
                        android:onClick="onClickExpandMaterialButton"
                        android:contentDescription="@string/unfold"
                />
            </LinearLayout> <!-- End of material_head_container -->
            <LinearLayout
                    android:id="@+id/material_content_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                <ImageButton
                        android:id="@+id/material_add_button"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:paddingRight="20dp"
                        android:src="@drawable/ic_add_circle_black_24dp"
                        android:onClick="onClickAddMaterial"
                />
            </LinearLayout> <!-- End of material_content_container-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/back_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/back"
                    android:onClick="onClickBack"
                />
                <Button
                        android:id="@+id/summary_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="@string/summary"
                        android:onClick="onClickSummary"
                />
            </LinearLayout> <!-- Bottom buttons -->
        </LinearLayout> <!-- toplevel_container-->
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>