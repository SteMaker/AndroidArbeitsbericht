<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="report_data" type="com.stemaker.arbeitsbericht.data.hoursreport.HoursReportData"/>
    </data>
    <androidx.cardview.widget.CardView
            android:id="@+id/hours_report_card_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:onClick="onClickReport">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">
            <TextView
                    android:id="@+id/hours_report_card_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="20dp"
                    android:text="@{@string/reportid(report_data.id)}"
                    android:textSize="12sp"
                    />
            <ImageButton
                    android:id="@+id/hours_report_card_del_button"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:paddingRight="20dp"
                    android:src="@drawable/ic_delete_black_24dp"
                    android:onClick="onClickDelete"
                    />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>
