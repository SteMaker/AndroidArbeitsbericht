<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".workreport.ReportEditorActivity">
    <data>
        <variable name="data" type="com.stemaker.arbeitsbericht.data.hoursreport.HoursReportData"/>
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
                android:id="@+id/hours_report_editor_activity_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                android:elevation="4dp"
                android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/hours_editor_scroll_view">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <!-- project and projectNr -->
                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/HoursEditorCards">
                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/project_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:id="@+id/project_head"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="@id/project_container"
                                app:layout_constraintLeft_toLeftOf="@id/project_container"
                                android:text="@string/project"
                                android:textSize="24dp"
                                />
                        <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/project"
                                android:layout_width="0dp"
                                app:layout_constraintWidth_default="percent"
                                app:layout_constraintWidth_percent="0.7"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/project_head"
                                app:layout_constraintRight_toLeftOf="@id/projectNr"
                                app:layout_constraintLeft_toLeftOf="@id/project_container">
                            <AutoCompleteTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@={data.project}"
                                    android:hint="@string/project"
                                    />
                        </com.google.android.material.textfield.TextInputLayout>
                        <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/projectNr"
                                android:layout_width="0dp"
                                app:layout_constraintWidth_default="percent"
                                app:layout_constraintWidth_percent="0.3"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="@id/project"
                                app:layout_constraintBottom_toBottomOf="@id/project"
                                app:layout_constraintLeft_toRightOf="@id/project">
                            <AutoCompleteTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@={data.projectNr}"
                                    android:hint="@string/projectNr"
                                    />
                        </com.google.android.material.textfield.TextInputLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
                <!-- date, start, end -->
                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/HoursEditorCards">
                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/time_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:id="@+id/time_head"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="@id/time_container"
                                app:layout_constraintLeft_toLeftOf="@id/time_container"
                                android:text="@string/worktimes"
                                android:textSize="24dp"
                                />
                        <TextView
                                android:id="@+id/date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/time_head"
                                app:layout_constraintLeft_toLeftOf="@id/time_head"
                                app:layout_constraintRight_toLeftOf="@id/date_change"
                                android:text='@{"Datum: "+data.date}'
                                android:textSize="20dp"
                                android:paddingLeft="10dp"
                                android:paddingBottom="20dp"
                                android:paddingRight="10dp"/>
                        <ImageButton
                                android:id="@+id/date_change"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="@id/date"
                                app:layout_constraintBottom_toBottomOf="@id/date"
                                app:layout_constraintLeft_toRightOf="@id/date"
                                app:layout_constraintLeft_toLeftOf="@id/start_time_change"
                                android:onClick="onClickDateChange"
                                android:src="@drawable/ic_date_range_white_24dp"/>
                        <TextView
                                android:id="@+id/start_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/date"
                                app:layout_constraintLeft_toLeftOf="@id/date"
                                app:layout_constraintRight_toLeftOf="@id/start_time_change"
                                android:text='@{"Anfangszeit: "+data.startTime}'
                                android:textSize="20dp"
                                android:paddingRight="10dp"
                                />
                        <ImageButton
                                android:id="@+id/start_time_change"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="@id/start_time"
                                app:layout_constraintBottom_toBottomOf="@id/start_time"
                                app:layout_constraintLeft_toRightOf="@id/start_time"
                                app:layout_constraintLeft_toLeftOf="@id/date_change"
                                android:onClick="onClickStartChange"
                                android:src="@drawable/ic_access_time_white_24dp"
                                />
                        <TextView
                                android:id="@+id/end_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/date"
                                app:layout_constraintLeft_toRightOf="@id/start_time_change"
                                app:layout_constraintRight_toLeftOf="@id/end_time_change"
                                android:text='@{"Endzeit: "+data.endTime}'
                                android:textSize="20dp"
                                android:paddingLeft="30dp"
                                android:paddingRight="10dp"
                                />
                        <ImageButton
                                android:id="@+id/end_time_change"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="@id/end_time"
                                app:layout_constraintBottom_toBottomOf="@id/end_time"
                                app:layout_constraintLeft_toRightOf="@id/end_time"
                                android:onClick="onClickEndChange"
                                android:src="@drawable/ic_access_time_white_24dp"
                                />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <!-- work items -->
                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                    style="@style/HoursEditorCards">
                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/work_items_top_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:id="@+id/work_head"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="@id/work_items_top_container"
                                app:layout_constraintLeft_toLeftOf="@id/work_items_top_container"
                                android:text="@string/workitems"
                                android:textSize="24dp"
                                />
                        <ImageButton
                                android:id="@+id/button_add_work_item"
                                android:layout_width="80dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/work_head"
                                app:layout_constraintLeft_toLeftOf="@id/work_head"
                                android:src="@drawable/ic_add_circle_black_24dp"
                                android:onClick="onClickAddWorkItem"
                                />
                        <LinearLayout
                                android:id="@+id/work_items_container"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toBottomOf="@id/button_add_work_item"
                                app:layout_constraintLeft_toLeftOf="@id/work_items_container"
                                android:orientation="vertical"
                                />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
