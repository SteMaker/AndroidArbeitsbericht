<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        tools:context=".SummaryActivity">

    <data>
        <variable name="signature" type="com.stemaker.arbeitsbericht.data.SignatureData"/>
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
                android:id="@+id/summary_activity_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                android:elevation="4dp"
                app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"/>
        <LinearLayout
                android:id="@+id/create_report_progress_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">
            <ProgressBar
                    android:id="@+id/create_report_progressbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            <TextView
                    android:id="@+id/create_report_progress_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
        </LinearLayout>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            <WebView
                    android:id="@+id/webview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
        </ScrollView>
        <androidx.cardview.widget.CardView
                android:id="@+id/employee_signature_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="4dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                android:clickable="false">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="employee_signature_text,clear_employee_signature_btn,lock_employee_signature_btn"/>
                <TextView
                    android:id="@+id/employee_signature_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/barrier1"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/clear_employee_signature_btn"
                    android:text="@string/employee_signature"
                    android:textSize="20sp"
                    android:clickable="true"
                        />
                <ImageButton
                    android:id="@+id/clear_employee_signature_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/barrier1"
                    app:layout_constraintRight_toLeftOf="@id/lock_employee_signature_btn"
                    android:src="@drawable/ic_delete_black_24dp"
                    android:onClick="onClickClearEmployeeSignature"
                    android:contentDescription="@string/clear"
                    />
                <ImageButton
                    android:id="@+id/lock_employee_signature_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/barrier1"
                    app:layout_constraintRight_toLeftOf="@id/hide_employee_signature_btn"
                    android:src="@drawable/ic_lock_black_24"
                    android:onClick="onClickLockEmployeeSignature"
                    android:contentDescription="@string/status_done"
                    />
                <ImageButton
                    android:id="@+id/hide_employee_signature_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/barrier1"
                    app:layout_constraintRight_toRightOf="parent"
                    android:src="@drawable/ic_expand_more_black_24dp"
                    android:onClick="onClickHideShowEmployeeSignature"
                    android:rotation="180"
                    />
                <com.stemaker.arbeitsbericht.LockableSignaturePad
                    android:id="@+id/employee_signature"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/barrier1"
                    android:visibility="gone"
                    app:penColor="@android:color/black"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/client_signature_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="4dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            android:clickable="false">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/barrier2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="client_signature_text,clear_client_signature_btn,lock_client_signature_btn"/>
                <TextView
                    android:id="@+id/client_signature_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/barrier2"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/clear_client_signature_btn"
                    android:text="@string/client_signature"
                    android:textSize="20sp"
                    android:clickable="true"
                    />
                <ImageButton
                    android:id="@+id/clear_client_signature_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/barrier2"
                    app:layout_constraintRight_toLeftOf="@id/lock_client_signature_btn"
                    android:src="@drawable/ic_delete_black_24dp"
                    android:onClick="onClickClearClientSignature"
                    android:contentDescription="@string/clear"
                    />
                <ImageButton
                    android:id="@+id/lock_client_signature_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/barrier2"
                    app:layout_constraintRight_toLeftOf="@id/hide_client_signature_btn"
                    android:src="@drawable/ic_lock_black_24"
                    android:onClick="onClickLockClientSignature"
                    android:contentDescription="@string/status_done"
                    />
                <ImageButton
                    android:id="@+id/hide_client_signature_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/barrier2"
                    app:layout_constraintRight_toRightOf="parent"
                    android:src="@drawable/ic_expand_more_black_24dp"
                    android:onClick="onClickHideShowClientSignature"
                    android:rotation="180"
                    />
                <com.stemaker.arbeitsbericht.LockableSignaturePad
                    android:id="@+id/client_signature"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/barrier2"
                    android:visibility="gone"
                    app:penColor="@android:color/black"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>