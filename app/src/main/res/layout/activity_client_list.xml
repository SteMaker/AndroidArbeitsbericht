<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".ClientListActivity">
    <data>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/client_activity_toolbar_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
            <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/client_activity_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:title="Kunden"
                    app:menu="@menu/client_menu"
                    app:theme="@style/ArbeitsberichtAppTheme.ActionBar"
                    app:popupTheme="@style/ArbeitsberichtAppTheme.ActionBar"/>
        </com.google.android.material.appbar.AppBarLayout>
        <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/initNotify"
                android:indeterminate="true"
                android:visibility="gone"
                />
        <TextView
                android:id="@+id/initNotify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/progressBar"
                app:layout_constraintRight_toRightOf="parent"
                android:text="@string/db_loading"
                android:visibility="gone"
                />
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/client_list_rv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/client_activity_toolbar_container"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                tools:listitem="@layout/client_card_layout">
        </androidx.recyclerview.widget.RecyclerView>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/new_client_button"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="16dp"
                android:text="@string/create_new_client"
                app:srcCompat="@drawable/ic_baseline_add_100"
                app:maxImageSize="40dp"
                android:theme="@style/ArbeitsberichtAppTheme.FloatButtons"
                android:onClick="onClickNewClient"
                />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>