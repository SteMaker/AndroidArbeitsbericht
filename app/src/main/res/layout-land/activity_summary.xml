<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".SummaryActivity">
    <data>
        <variable name="signature" type="com.stemaker.arbeitsbericht.data.SignatureData"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/summary_activity_toolbar_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
            <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/summary_activity_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:title="Zusammenfassung"
                    app:menu="@menu/summary_menu"
                    app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
                    app:theme="@style/ArbeitsberichtAppTheme.ActionBar"
                    app:popupTheme="@style/ArbeitsberichtAppTheme.ActionBar"/>
        </com.google.android.material.appbar.AppBarLayout>
        <LinearLayout
                android:id="@+id/create_report_progress_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/summary_activity_toolbar_container"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:orientation="horizontal"
                android:visibility="gone">
            <ProgressBar
                    android:id="@+id/create_report_progressbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            <TextView
                    android:id="@+id/create_report_progress_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
        </LinearLayout>
        <ScrollView
                android:id="@+id/scroll_webview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:layout_constraintTop_toBottomOf="@id/create_report_progress_container"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent">
            <WebView
                    android:id="@+id/webview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
        </ScrollView>
        <Button
                android:id="@+id/show_employee_signature_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="5dp"
                app:icon="@drawable/ic_baseline_draw_24"
                android:text="AN"
                style="@style/ArbeitsberichtAppTheme.FloatButtons"
                android:onClick="onClickShowEmployeeSignature"
                />
        <Button
            android:id="@+id/show_client_signature_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginRight="5dp"
                app:icon="@drawable/ic_baseline_draw_24"
                android:text="AG"
                style="@style/ArbeitsberichtAppTheme.FloatButtons"
                android:onClick="onClickShowClientSignature"
                />
        <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier_employee_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:barrierDirection="top"
                app:constraint_referenced_ids="show_employee_signature_btn,show_client_signature_btn"
                />
        <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier_client_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:barrierDirection="top"
                app:constraint_referenced_ids="show_employee_signature_btn,show_client_signature_btn"
                />
        <androidx.cardview.widget.CardView
                android:id="@+id/employee_signature_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/barrier_employee_bottom"
                app:layout_constraintLeft_toLeftOf="parent"
                android:visibility="gone"
                style="@style/ArbeitsberichtAppTheme.CardLevel1"
                android:clickable="false">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <androidx.constraintlayout.widget.Barrier
                        android:id="@+id/barrier1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:barrierDirection="bottom"
                        app:constraint_referenced_ids="employee_signature_text,clear_employee_signature_btn,lock_employee_signature_btn"/>
                <TextView
                        android:id="@+id/employee_signature_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/barrier1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:text="@string/employee_signature"
                        android:textSize="20sp"
                        android:clickable="true"
                        />
                <Button
                        android:id="@+id/clear_employee_signature_btn"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/barrier1"
                        app:layout_constraintLeft_toRightOf="@id/employee_signature_text"
                        app:icon="@drawable/ic_delete_black_24dp"
                        style="@style/ArbeitsberichtAppTheme.IconButtons"
                        android:onClick="onClickClearEmployeeSignature"
                        android:contentDescription="@string/clear"
                        />
                <Button
                        android:id="@+id/lock_employee_signature_btn"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/barrier1"
                        app:layout_constraintLeft_toRightOf="@id/clear_employee_signature_btn"
                        app:icon="@drawable/ic_lock_black_24"
                        style="@style/ArbeitsberichtAppTheme.IconButtons"
                        android:onClick="onClickLockEmployeeSignature"
                        android:contentDescription="@string/status_done"
                        />
                <Button
                        android:id="@+id/hide_employee_signature_btn"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/barrier1"
                        app:layout_constraintLeft_toRightOf="@id/lock_employee_signature_btn"
                        app:icon="@drawable/ic_baseline_keyboard_double_arrow_down_24"
                        style="@style/ArbeitsberichtAppTheme.IconButtons"
                        android:onClick="onClickHideEmployeeSignature"
                        />
                <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline_employee_sigpad_width"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintGuide_begin="400dp"
                        android:orientation="vertical"/>
                <androidx.constraintlayout.widget.Barrier
                        android:id="@+id/barrier_employee_sigpad_width"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:barrierDirection="end"
                        app:constraint_referenced_ids="guideline_employee_sigpad_width,hide_employee_signature_btn"
                        />
                <com.stemaker.arbeitsbericht.LockableSignaturePad
                        android:id="@+id/employee_signature"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="@id/barrier_employee_sigpad_width"
                        app:layout_constraintTop_toBottomOf="@id/barrier1"
                        app:penColor="@android:color/black"
                        />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:id="@+id/client_signature_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/barrier_client_bottom"
                app:layout_constraintRight_toRightOf="parent"
                android:visibility="gone"
                style="@style/ArbeitsberichtAppTheme.CardLevel1"
                android:clickable="false">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <androidx.constraintlayout.widget.Barrier
                        android:id="@+id/barrier2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:barrierDirection="bottom"
                        app:constraint_referenced_ids="client_signature_text,clear_client_signature_btn,lock_client_signature_btn"/>
                <TextView
                        android:id="@+id/client_signature_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/barrier2"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:text="@string/client_signature"
                        android:textSize="20sp"
                        android:clickable="true"
                        />
                <Button
                        android:id="@+id/clear_client_signature_btn"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/barrier2"
                        app:layout_constraintLeft_toRightOf="@id/client_signature_text"
                        app:icon="@drawable/ic_delete_black_24dp"
                        style="@style/ArbeitsberichtAppTheme.IconButtons"
                        android:onClick="onClickClearClientSignature"
                        android:contentDescription="@string/clear"
                        />
                <Button
                        android:id="@+id/lock_client_signature_btn"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/barrier2"
                        app:layout_constraintLeft_toRightOf="@id/clear_client_signature_btn"
                        app:icon="@drawable/ic_lock_black_24"
                        style="@style/ArbeitsberichtAppTheme.IconButtons"
                        android:onClick="onClickLockClientSignature"
                        android:contentDescription="@string/status_done"
                        />
                <Button
                        android:id="@+id/hide_client_signature_btn"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/barrier2"
                        app:layout_constraintLeft_toRightOf="@id/lock_client_signature_btn"
                        app:icon="@drawable/ic_baseline_keyboard_double_arrow_down_24"
                        style="@style/ArbeitsberichtAppTheme.IconButtons"
                        android:onClick="onClickHideClientSignature"
                        />
                <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline_client_sigpad_width"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintGuide_begin="400dp"
                        android:orientation="vertical"/>
                <androidx.constraintlayout.widget.Barrier
                        android:id="@+id/barrier_client_sigpad_width"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:barrierDirection="end"
                        app:constraint_referenced_ids="guideline_client_sigpad_width,hide_client_signature_btn"
                        />
                <com.stemaker.arbeitsbericht.LockableSignaturePad
                        android:id="@+id/client_signature"
                        android:layout_width="0dp"
                        android:layout_height="200dp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="@id/barrier_client_sigpad_width"
                        app:layout_constraintTop_toBottomOf="@id/barrier2"
                        app:penColor="@android:color/black"
                        />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>