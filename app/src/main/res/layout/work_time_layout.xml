<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="work_time" type="com.stemaker.arbeitsbericht.data.workreport.WorkTimeData"/>
    </data>

    <androidx.cardview.widget.CardView
            android:id="@+id/work_time_card_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="4dp"
            card_view:cardElevation="4dp"
            app:contentPadding="10dp"
            app:contentPaddingBottom="0dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            android:clickable="false">
        <LinearLayout
                android:id="@+id/work_time_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <!-- First line -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="5dp">
                <RelativeLayout
                        android:id="@+id/date_container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal">
                    <TextView
                            android:id="@+id/work_time_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text='@{"Datum: "+work_time.date}'
                            android:layout_centerInParent="true"
                            android:layout_alignParentLeft="true"
                            android:paddingRight="10dp"/>
                    <ImageButton
                            android:id="@+id/work_time_date_change"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_date_range_white_24dp"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp">
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp">
                    <ImageButton
                            android:id="@+id/work_time_del_button"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/ic_delete_black_24dp"/>
                    <ImageButton
                            android:id="@+id/work_time_copy_button"
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@id/work_time_del_button"
                            android:src="@drawable/ic_content_copy_black_24dp"/>
                </RelativeLayout>
            </LinearLayout>
            <!-- Second line -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <RelativeLayout
                        android:id="@+id/start_container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp">
                    <TextView
                            android:id="@+id/work_time_work_start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_alignParentLeft="true"
                            android:text='@{"Anfangszeit: "+work_time.startTime}'
                            android:paddingRight="10dp"/>
                    <ImageButton
                            android:id="@+id/work_time_work_start_change"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_access_time_white_24dp"/>
                </RelativeLayout>
                <RelativeLayout
                        android:id="@+id/end_container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp">
                    <TextView
                            android:id="@+id/work_time_work_end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_alignParentLeft="true"
                            android:text='@{"Endzeit: "+work_time.endTime}'
                            android:paddingRight="10dp"/>
                    <ImageButton
                            android:id="@+id/work_time_work_end_change"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/ic_access_time_white_24dp"/>
                </RelativeLayout>
                <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp">
                </RelativeLayout>
            </LinearLayout>
            <!-- third line -->
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <RelativeLayout
                        android:id="@+id/drivetime_container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp">
                    <TextView
                            android:id="@+id/work_time_drive_duration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_alignParentLeft="true"
                            android:text='@{"Fahrzeit: "+work_time.driveTime}'
                            android:paddingRight="10dp"
                            />
                    <ImageButton
                            android:id="@+id/work_time_drive_duration_change"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/ic_access_time_white_24dp"
                            />
                </RelativeLayout>
                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp">
                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/work_time_distance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            android:selectAllOnFocus="true"
                            app:textInt="@={work_time.distance}"
                            android:hint="@string/distance"/>
                </com.google.android.material.textfield.TextInputLayout>
                <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp">
                </RelativeLayout>
            </LinearLayout>
            <ImageButton
                    android:id="@+id/work_time_add_employee"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:src="@drawable/ic_add_circle_black_24dp"
                    />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>