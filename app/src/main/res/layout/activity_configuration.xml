<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ReportEditorActivity">

    <androidx.appcompat.widget.Toolbar
            android:id="@+id/configuration_activity_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            app:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"/>
    <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:id="@+id/sftp_progress"
            />
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="4dp"
                app:contentPadding="10dp"
                app:contentPaddingBottom="0dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                android:clickable="false">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Allgemeine Einstellungen"
                        android:textSize="24sp"
                        />
                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible">
                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/config_employee_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/employee_name"
                            />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible">
                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/config_device_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/device_name"
                            />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible">
                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/config_report_id_pattern"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/report_id_pattern"
                            />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible">
                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/config_mail_receiver"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/mail_receiver"
                            android:inputType="textEmailAddress"
                            />
                </com.google.android.material.textfield.TextInputLayout>
                <Switch
                        android:id="@+id/crashlog_enable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/crashlog_enable"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="4dp"
                    card_view:cardElevation="4dp"
                    app:contentPadding="10dp"
                    app:contentPaddingBottom="0dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
                    android:clickable="false">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/sftp_settings"
                            android:textSize="24sp"
                            />
                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <AutoCompleteTextView
                                android:id="@+id/sftp_host"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textUri"
                                android:hint="@string/sftp_host"
                                />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <AutoCompleteTextView
                                android:id="@+id/sftp_port"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:hint="@string/sftp_port"
                                />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <AutoCompleteTextView
                                android:id="@+id/sftp_user"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:hint="@string/sftp_user"
                                />
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <AutoCompleteTextView
                                android:id="@+id/sftp_pwd"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textPassword"
                                android:hint="@string/sftp_pwd"
                                />
                    </com.google.android.material.textfield.TextInputLayout>
                    <Button
                            android:id="@+id/sftp_connect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="16dp"
                            android:layout_gravity="end"
                            android:text="@string/sftp_connect_test"
                            android:onClick="onClickConnect"
                            />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="4dp"
                    card_view:cardElevation="4dp"
                    app:contentPadding="10dp"
                    app:contentPaddingBottom="0dp"
                    app:cardPreventCornerOverlap="true"
                    app:cardUseCompatPadding="true"
                    android:clickable="false">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ausgabe Einstellungen"
                            android:textSize="24sp"
                            />
                    <RadioGroup
                            android:id="@+id/output_type_select_radiogroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                        <RadioButton android:id="@+id/radio_odf_output"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/odf_output"
                                />
                        <RadioButton android:id="@+id/radio_pdf_output"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/pdf_output"
                                />
                    </RadioGroup>
                    <androidx.cardview.widget.CardView
                            android:id="@+id/odf_config_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            card_view:cardCornerRadius="4dp"
                            card_view:cardElevation="4dp"
                            app:contentPadding="10dp"
                            app:contentPaddingBottom="0dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true"
                            android:clickable="false">
                        <RelativeLayout
                                android:id="@+id/odf_config_sftp_container"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/odf_template_ftp_path_til"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentTop="true">
                                <AutoCompleteTextView
                                        android:id="@+id/odf_template_ftp_path"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="textUri"
                                        android:hint="@string/sftp_path_odf"
                                        />
                            </com.google.android.material.textfield.TextInputLayout>
                            <Button
                                    android:id="@+id/odf_template_load_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_toLeftOf="@id/odf_template_sftp_load_button"
                                    android:layout_below="@id/odf_template_ftp_path_til"
                                    android:layout_marginLeft="16dp"
                                    android:text="@string/sftp_file_load"
                                    android:onClick="onClickSftpLoadTemplate"
                                    />
                            <Button
                                    android:id="@+id/odf_template_sftp_load_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignEnd="@id/odf_template_ftp_path_til"
                                    android:layout_below="@id/odf_template_ftp_path_til"
                                    android:layout_marginLeft="16dp"
                                    android:text="@string/file_load"
                                    android:onClick="onClickLoadTemplate"
                                    />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                            android:id="@+id/pdf_config_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            card_view:cardCornerRadius="4dp"
                            card_view:cardElevation="4dp"
                            app:contentPadding="10dp"
                            app:contentPaddingBottom="0dp"
                            app:cardPreventCornerOverlap="true"
                            app:cardUseCompatPadding="true"
                            android:clickable="false">
                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/logo_ftp_path_til"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                <AutoCompleteTextView
                                        android:id="@+id/logo_ftp_path"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="textUri"
                                        android:hint="@string/sftp_path_logo"
                                        />
                            </com.google.android.material.textfield.TextInputLayout>
                                <ImageView
                                        android:id="@+id/logo_image"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_alignLeft="@id/logo_ftp_path_til"
                                        android:layout_toLeftOf="@id/logo_del_button"
                                        android:layout_below="@id/logo_ftp_path_til"
                                        android:layout_alignBottom="@id/logo_del_button"
                                        android:scaleType="centerInside"
                                        android:src="@drawable/ic_assignment_black_24dp"
                                        />
                                <Button
                                        android:id="@+id/logo_del_button"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="16dp"
                                        android:layout_toLeftOf="@id/logo_load_button"
                                        android:layout_below="@id/logo_ftp_path_til"
                                        android:text="@string/nouse"
                                        android:onClick="onClickDelLogo"
                                        />
                                <Button
                                        android:id="@+id/logo_load_button"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_toLeftOf="@id/logo_sftp_load_button"
                                        android:layout_below="@id/logo_ftp_path_til"
                                        android:layout_marginLeft="16dp"
                                        android:text="@string/sftp_file_load"
                                        android:onClick="onClickSftpLoadLogo"
                                        />
                                <Button
                                        android:id="@+id/logo_sftp_load_button"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignRight="@id/logo_ftp_path_til"
                                        android:layout_below="@id/logo_ftp_path_til"
                                        android:layout_marginLeft="16dp"
                                        android:text="@string/file_load"
                                        android:onClick="onClickLoadLogo"
                                        />
                            <com.google.android.material.textfield.TextInputLayout
                                    android:id="@+id/footer_ftp_path_til"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/logo_sftp_load_button">
                                <AutoCompleteTextView
                                        android:id="@+id/footer_ftp_path"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:inputType="textUri"
                                        android:hint="@string/sftp_path_footer"
                                        />
                            </com.google.android.material.textfield.TextInputLayout>
                                <ImageView
                                        android:id="@+id/footer_image"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/footer_ftp_path_til"
                                        android:layout_alignLeft="@id/footer_ftp_path_til"
                                        android:layout_toLeftOf="@id/footer_del_button"
                                        android:layout_alignBottom="@id/footer_del_button"
                                        android:layout_weight="1"
                                        android:scaleType="centerInside"
                                    />
                                <Button
                                        android:id="@+id/footer_del_button"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/footer_ftp_path_til"
                                        android:layout_toLeftOf="@id/footer_sftp_load_button"
                                        android:layout_marginLeft="16dp"
                                        android:text="@string/nouse"
                                        android:onClick="onClickDelFooter"
                                        />
                                <Button
                                        android:id="@+id/footer_sftp_load_button"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/footer_ftp_path_til"
                                        android:layout_toLeftOf="@id/footer_load_button"
                                        android:layout_marginLeft="16dp"
                                        android:text="@string/sftp_file_load"
                                        android:onClick="onClickSftpLoadFooter"
                                        />
                                <Button
                                        android:id="@+id/footer_load_button"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@id/footer_ftp_path_til"
                                        android:layout_alignRight="@id/footer_ftp_path_til"
                                        android:layout_marginLeft="16dp"
                                        android:text="@string/file_load"
                                        android:onClick="onClickLoadFooter"
                                        />
                            <TextView
                                    android:id="@+id/fontsize_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/footer_load_button"
                                    android:layout_alignParentLeft="true"
                                    android:textSize="18dp"
                                    />
                            <SeekBar
                                    android:id="@+id/fontsize_seekbar"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/fontsize_text"
                                    android:layout_alignParentLeft="true"
                                    android:max="20"
                                    android:min="8"
                                    />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>