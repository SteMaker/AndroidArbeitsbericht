<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".editor_fragments.BillEditorFragment">
    <data>
        <variable name="bill_data" type="com.stemaker.arbeitsbericht.data.BillData"/>
        <variable name="project_data" type="com.stemaker.arbeitsbericht.data.ProjectData"/>
    </data>

    <com.stemaker.arbeitsbericht.helpers.ConstraintLayoutVisListener
            android:id="@+id/project_bill_content_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:visibility="@={project_data.visibility}">
        <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/vert_guide_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent ="0.49"/>
        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/vert_guide_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent ="0.51"/>
        <Button
                android:id="@+id/client_select_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/project_bill_content_container"
                app:layout_constraintRight_toRightOf="parent"
                style="@style/ArbeitsberichtAppTheme.IconTextButtons"
                app:icon="@drawable/ic_assignment_black_24dp"
                android:text="@string/client_list"
                android:layout_gravity="right"
                />
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/bill_address_name_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/client_select_button"
                app:layout_constraintLeft_toRightOf="@id/vert_guide_right"
                app:layout_constraintRight_toRightOf="parent"
                android:visibility="visible">
            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/bill_address_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName|textCapWords"
                    android:text="@={bill_data.name}"
                    android:hint="@string/name"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/bill_address_street_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/bill_address_name_layout"
                app:layout_constraintLeft_toRightOf="@id/vert_guide_right"
                app:layout_constraintRight_toRightOf="parent"
                android:visibility="visible">
            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/bill_address_street"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:text="@={bill_data.street}"
                    android:hint="@string/street"/>
        </com.google.android.material.textfield.TextInputLayout>
        <androidx.constraintlayout.widget.Guideline
                android:id="@+id/vert_guide2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent ="0.65"/>
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/bill_address_zip_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/bill_address_street_layout"
                app:layout_constraintLeft_toRightOf="@id/vert_guide_right"
                app:layout_constraintRight_toLeftOf="@id/vert_guide2"
                android:visibility="visible">
            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/bill_address_zip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:text="@={bill_data.zip}"
                    android:hint="@string/zip"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/bill_address_city_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/bill_address_street_layout"
                app:layout_constraintLeft_toRightOf="@id/vert_guide2"
                app:layout_constraintRight_toRightOf="parent"
                android:visibility="visible">
            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/bill_address_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:text="@={bill_data.city}"
                    android:hint="@string/city"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/project_name_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/bill_address_name_layout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/vert_guide_left"
                android:visibility="visible">
            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/project_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName|textCapWords"
                    android:text="@={project_data.name}"
                    android:hint="@string/client_project"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/project_extra1_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/project_name_layout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/vert_guide_left"
                android:visibility="visible">
            <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/project_extra1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences"
                    android:text="@={project_data.extra1}"
                    android:hint="@string/extra"/>
        </com.google.android.material.textfield.TextInputLayout>
    </com.stemaker.arbeitsbericht.helpers.ConstraintLayoutVisListener>
</layout>
