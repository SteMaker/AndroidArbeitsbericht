<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".LumpSumDefinitionActivity">
    <data>
    </data>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/lump_sum_configuration_activity_toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/lump_sum_configuration_activity_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:title="@string/lump_sum_define"
                    app:menu="@menu/lump_sum_configuration_menu"
                    app:theme="@style/ArbeitsberichtAppTheme.ActionBar"
                    app:popupTheme="@style/ArbeitsberichtAppTheme.ActionBar"/>
        </com.google.android.material.appbar.AppBarLayout>
        <ProgressBar
                android:id="@+id/load_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                />
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/ArbeitsberichtAppTheme.CardLevel1"
                        android:clickable="false">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/lump_sum_load"
                                android:textSize="24sp"
                                />
                        <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/lump_sum_ftp_path"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="textUri"
                                    android:hint="@string/sftp_path_lump_sum"
                                    />
                        </com.google.android.material.textfield.TextInputLayout>
                        <Button
                                android:id="@+id/lump_sum_load_button"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:text="@string/sftp_file_load"
                                android:onClick="onClickLoad"
                                style="@style/ArbeitsberichtAppTheme.TextButtons"
                                />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/ArbeitsberichtAppTheme.CardLevel1"
                        android:clickable="false">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/lump_sum_define"
                                android:textSize="24sp"
                                />
                        <Button
                                android:id="@+id/add_lump_sum_element_button"
                                android:layout_width="60dp"
                                android:layout_height="wrap_content"
                                app:icon="@drawable/ic_add_circle_black_24dp"
                                style="@style/ArbeitsberichtAppTheme.IconButtons"
                                android:onClick="onClickAddLumpSumDefinition"
                                />
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/lump_sums_container"
                                android:orientation="vertical">
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>